{% extends 'base.html.twig' %}

{% block title %}Activites index{% endblock %}

{% block body %}
    <h1>Activites index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activite in activites %}
            <tr>
                <td>{{ activite.id }}</td>
                <td>{{ activite.type }}</td>
                <td>{{ activite.description }}</td>
                <td>
                    <a href="{{ path('app_activites_show', {'id': activite.id}) }}"><button type="button" class="btn btn-primary">show</button></a>
                    <a href="{{ path('app_activites_edit', {'id': activite.id}) }}"><button type="button" class="btn btn-dark">edit</button></a>
                    <a href="{{ path('app_activites_delete', {'id': activite.id}) }}"><button type="button" class="btn btn-dark disabled">delete</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_activites_new') }}"><button type="button" class="btn btn-primary">add new activity</button></a>
{% endblock %}
