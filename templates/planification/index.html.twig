{% extends 'base.html.twig' %}

{% block title %}Planification index{% endblock %}

{% block body %}
    <h1>Planification index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>HeureDebut</th>
                <th>HeureFin</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planification in planifications %}
            <tr>
                <td>{{ planification.id }}</td>
                <td>{{ planification.HeureDebut }}</td>
                <td>{{ planification.HeureFin }}</td>
                <td>{{ planification.date ? planification.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_planification_show', {'id': planification.id}) }}"><button type="button" class="btn btn-primary">show</button></a>
                    <a href="{{ path('app_planification_edit', {'id': planification.id}) }}"><button type="button" class="btn btn-dark">edit</button></a>
                    <a href="{{ path('app_planification_delete', {'id': planification.id}) }}"><button type="button" class="btn btn-dark disabled">delete</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_planification_new') }}"><button type="button" class="btn btn-primary">add new plan</button></a>
{% endblock %}
